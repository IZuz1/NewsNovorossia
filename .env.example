# Заполни и переименуй в .env (локальный запуск) или задай в Render → Environment
BOT_TOKEN=1234567890:ABC_your_telegram_token
CHANNEL_ID=@your_channel_or_chat_id

# Google News locale
NEWS_HL=ru
NEWS_GL=RU
NEWS_CEID=RU:ru

# Список тегов: CSV или JSON-массив
NEWS_TAGS=технологии, искусственный интеллект, наука
# NEWS_TAGS=["кибербезопасность","финансы","спорт"]

# Пределы
MAX_PER_RUN=6
MAX_PER_TAG=2
MAX_AGE_HOURS=24

# Gemini
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash
ENABLE_SUMMARY=true
ENABLE_SEARCH_GROUNDING=false
